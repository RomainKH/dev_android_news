<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:foreground="?selectableItemBackground">

    <ImageView
            android:layout_width="130sp"
            android:layout_height="72sp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/NewsImageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="40dp"/>
    <TextView
            android:text="title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/titleTextView"
            android:textAllCaps="false"
            android:textSize="12sp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/NewsImageView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/view" app:layout_constraintHorizontal_bias="0.6"
            android:textColor="#333333"/>
    <TextView
            android:text="author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/authorTextView"
            android:textSize="10sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/NewsImageView"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:textColor="#333333"
            app:layout_constraintStart_toEndOf="@+id/dateTextView" android:layout_marginStart="64dp"
            android:textAlignment="textEnd"/>
    <TextView
            android:text="date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dateTextView"
            android:textSize="10sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DADADA"
            tools:layout_editor_absoluteX="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/view"/>
</androidx.constraintlayout.widget.ConstraintLayout>