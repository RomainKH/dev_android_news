<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:foreground="?selectableItemBackground">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/NewsImageView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:textAllCaps="false"
            android:textSize="20sp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#333333" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"/>
    <TextView
            android:text="author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/authorTextView"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:textColor="#333333"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toEndOf="@+id/dateTextView" android:layout_marginStart="24dp"/>
    <TextView
            android:text="date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dateTextView"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/NewsImageView" android:textColor="#3C3C3C"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DADADA"
            tools:layout_editor_absoluteX="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/view"/>
</androidx.constraintlayout.widget.ConstraintLayout>